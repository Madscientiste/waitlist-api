# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 130

# Smaller indentation for these file types
[*.{yml,yaml,json,js,ts,jsx,tsx,html,htm,css,scss,sass,sql,sh,bash,md,markdown,graphql,gql}]
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab

# Don't trim trailing whitespace in markdown
[*.{md,markdown}]
trim_trailing_whitespace = false
